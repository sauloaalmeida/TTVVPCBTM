  doi={10.1109/TPDS.2020.3000418},
  ISSN={1558-2183},
  month={Nov},}
@ARTICLE{9109678,
  author={Kang, Qiao and Lee, Sunwoo and Hou, Kaiyuan and Ross, Robert and Agrawal, Ankit and Choudhary, Alok and Liao, Wei-keng},
