@INPROCEEDINGS{315630,
  author={Elnozahy, E.N. and Zwaenepoel, W.},
  booktitle={Proceedings of IEEE 24th International Symposium on Fault- Tolerant Computing}, 
  title={On the use and implementation of message logging}, 
  year={1994},
